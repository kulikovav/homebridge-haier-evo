{
  "name": "homebridge-haier-evo",
  "version": "1.0.56",
  "description": "Homebridge plugin for Haier Evo devices (air conditioners, refrigerators, etc.)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:prepublish": "npm run build && npm run lint && npm run test:unit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test:standalone": "node run-tests.js",
    "test:standalone:api": "node run-tests.js --api",
    "test:standalone:devices": "node run-tests.js --devices",
    "test:standalone:ac": "node run-tests.js --ac-control",
    "test:standalone:all": "node run-tests.js --all",
    "test:rate-limiting": "node test-rate-limiting.js",
    "test:ac-control": "node test-ac-control.js",
    "release": "scripts/publish.sh",
    "release:patch": "scripts/publish.sh --patch",
    "release:minor": "scripts/publish.sh --minor",
    "release:major": "scripts/publish.sh --major"
  },
  "keywords": [
    "homebridge-plugin",
    "haier",
    "evo",
    "air-conditioner",
    "climate",
    "refrigerator",
    "smart-home"
  ],
  "author": "Haier Evo Team",
  "contributors": [
    "Adapted from and7ey/haier_evo"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "homebridge": ">=1.3.0"
  },
  "files": [
    "dist/",
    "config.schema.json",
    "LICENSE"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.2.1",
    "uuid": "^11.1.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@typescript-eslint/utils": "^8.39.1",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "homebridge": "^1.6.1",
    "jest": "^29.5.0",
    "jiti": "^2.5.1",
    "mock-socket": "^9.3.0",
    "nock": "^13.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.0",
    "typescript-eslint": "^8.39.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kulikovav/homebridge-haier-evo.git"
  },
  "bugs": {
    "url": "https://github.com/kulikovav/homebridge-haier-evo/issues"
  },
  "homepage": "https://github.com/kulikovav/homebridge-haier-evo#readme"
}
