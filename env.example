# Haier Evo Test Configuration
# Copy this file to .env and fill in your actual credentials

# Required: Your Haier Evo API credentials
HAIER_EVO_EMAIL=your.email@example.com
HAIER_EVO_PASSWORD=your_actual_password
HAIER_EVO_REGION=ru

# Optional: Specific device ID for testing
HAIER_EVO_DEVICE_ID=your-device-id-here

# Test configuration
TEST_TIMEOUT=30000
TEST_RETRY_ATTEMPTS=3
TEST_RETRY_DELAY=1000

# Debug mode
DEBUG=1

# Enable real API tests
RUN_REAL_API_TESTS=1
